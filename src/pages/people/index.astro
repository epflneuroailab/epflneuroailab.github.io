---
import Layout from '../../layouts/Layout.astro';
import people from '../../data/people.json';

const baseUrl = import.meta.env.BASE_URL;

interface Person {
  name: string;
  role: string;
  email: string;
  image?: string;
  website?: string;
  scholar?: string;
}

const sections = [
  { key: 'faculty', title: 'Faculty', data: people.faculty as Person[] },
  { key: 'scientists', title: 'Scientists', data: people.scientists as Person[] },
  { key: 'phd_students', title: 'PhD Students', data: people.phd_students as Person[] },
  { key: 'project_students', title: 'Project Students', data: people.project_students as Person[] },
  { key: 'visitors', title: 'Visitors', data: people.visitors as Person[] },
  { key: 'staff', title: 'Staff', data: people.staff as Person[] },
];

function getInitials(name: string): string {
  return name
    .split(' ')
    .map(n => n[0])
    .join('')
    .slice(0, 2)
    .toUpperCase();
}
---

<Layout title="People" description="Meet the team at EPFL NeuroAI Lab">
  <!-- Hero Section -->
  <section class="relative py-16 lg:py-24 overflow-hidden">
    <div class="absolute inset-0 gradient-bg opacity-5"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">
          Our <span class="gradient-text">Team</span>
        </h1>
        <p class="text-lg text-gray-600">
          We are a diverse group of researchers from computer science, neuroscience, and cognitive science, 
          united by our passion for understanding intelligence.
        </p>
      </div>
    </div>
  </section>

  <!-- Team Sections -->
  {sections.map((section) => section.data.length > 0 && (
    <section class="py-12" id={section.key}>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-8 pb-4 border-b border-gray-200">
          {section.title}
        </h2>
        
        <div class={`grid gap-6 ${
          section.key === 'faculty' 
            ? 'md:grid-cols-1 lg:grid-cols-1 max-w-2xl' 
            : section.key === 'project_students' 
              ? 'sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4'
              : 'sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3'
        }`}>
          {section.data.map((person) => (
            <div class={`bg-white rounded-2xl border border-gray-100 overflow-hidden card-hover ${
              section.key === 'faculty' ? 'flex flex-col sm:flex-row' : ''
            }`}>
              {section.key === 'faculty' ? (
                <>
                  <!-- Faculty card with larger layout -->
                  <div class="sm:w-48 h-48 sm:h-auto bg-gradient-to-br from-[var(--color-primary-green)]/10 to-[var(--color-primary-blue)]/10 flex items-center justify-center flex-shrink-0">
                    <span class="text-4xl font-bold gradient-text">{getInitials(person.name)}</span>
                  </div>
                  <div class="p-6 flex flex-col justify-center">
                    <h3 class="text-xl font-bold text-gray-900 mb-1">{person.name}</h3>
                    <p class="text-[var(--color-primary-green)] font-medium text-sm mb-3">{person.role}</p>
                    <div class="flex flex-wrap gap-3">
                      <a href={`mailto:${person.email}`} class="inline-flex items-center text-gray-500 hover:text-[var(--color-primary-green)] text-sm transition-colors">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                        Email
                      </a>
                      {person.website && (
                        <a href={person.website} target="_blank" rel="noopener" class="inline-flex items-center text-gray-500 hover:text-[var(--color-primary-green)] text-sm transition-colors">
                          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                          </svg>
                          Website
                        </a>
                      )}
                      {person.scholar && (
                        <a href={person.scholar} target="_blank" rel="noopener" class="inline-flex items-center text-gray-500 hover:text-[var(--color-primary-green)] text-sm transition-colors">
                          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M5.242 13.769L0 9.5 12 0l12 9.5-5.242 4.269C17.548 11.249 14.978 9.5 12 9.5c-2.977 0-5.548 1.748-6.758 4.269zM12 10a7 7 0 1 0 0 14 7 7 0 0 0 0-14z"/>
                          </svg>
                          Scholar
                        </a>
                      )}
                    </div>
                  </div>
                </>
              ) : (
                <>
                  <!-- Regular team member card -->
                  <div class="aspect-square bg-gradient-to-br from-[var(--color-primary-green)]/10 to-[var(--color-primary-blue)]/10 flex items-center justify-center">
                    <span class="text-3xl font-bold gradient-text">{getInitials(person.name)}</span>
                  </div>
                  <div class="p-5">
                    <h3 class="font-semibold text-gray-900 mb-1">{person.name}</h3>
                    <p class="text-[var(--color-primary-green)] text-sm mb-3">{person.role}</p>
                    <div class="flex items-center gap-2">
                      <a href={`mailto:${person.email}`} class="text-gray-400 hover:text-[var(--color-primary-green)] transition-colors" title="Email">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                      </a>
                      {person.website && (
                        <a href={person.website} target="_blank" rel="noopener" class="text-gray-400 hover:text-[var(--color-primary-green)] transition-colors" title="Website">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                          </svg>
                        </a>
                      )}
                    </div>
                  </div>
                </>
              )}
            </div>
          ))}
        </div>
      </div>
    </section>
  ))}

  <!-- Alumni Section -->
  {people.alumni && people.alumni.length > 0 && (
    <section class="py-12 bg-gray-50" id="alumni">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-8 pb-4 border-b border-gray-200">
          Alumni
        </h2>
        <p class="text-gray-600">
          Former members and their next steps.
        </p>
      </div>
    </section>
  )}
</Layout>
