---
import Layout from '../../layouts/Layout.astro';

const baseUrl = import.meta.env.BASE_URL;

const contacts = [
  {
    name: 'Prof. Martin Schrimpf',
    role: 'Principal Investigator',
    email: 'martin.schrimpf@epfl.ch',
    description: 'For research inquiries, collaborations, and postdoc applications.'
  },
  {
    name: 'Stéphanie Debayle',
    role: 'Administrative Assistant',
    email: 'stephanie.debayle@epfl.ch',
    phone: '+41 21 693 5148',
    description: 'For administrative matters and general inquiries.'
  }
];

const locations = [
  {
    name: 'Main Campus Lausanne',
    address: 'BC 206',
    fullAddress: 'EPFL, INX-SV, SV UPSCHRIMPF1, SV 2513 (Bâtiment SV), Station 19, CH-1015 Lausanne',
    mapUrl: 'https://plan.epfl.ch/?room==BC%20206'
  },
  {
    name: 'Campus Biotech Geneva',
    address: 'B1 0 261.050',
    fullAddress: 'Campus Biotech, Chemin des Mines 9, 1202 Geneva',
    mapUrl: 'https://www.campusbiotech.ch/en/contact'
  }
];
---

<Layout title="Contact" description="Contact the EPFL NeuroAI Lab">
  <!-- Hero Section -->
  <section class="relative py-16 lg:py-24 overflow-hidden">
    <div class="absolute inset-0 gradient-bg opacity-5"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">
          Get in <span class="gradient-text">Touch</span>
        </h1>
        <p class="text-lg text-gray-600">
          We're happy to hear from you. Reach out for collaborations, questions, or just to say hello.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Cards -->
  <section class="py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        {contacts.map((contact) => (
          <div class="bg-white rounded-2xl p-8 border border-gray-100 shadow-sm">
            <div class="w-16 h-16 gradient-bg rounded-full flex items-center justify-center text-white text-xl font-bold mb-6">
              {contact.name.split(' ').map(n => n[0]).join('')}
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-1">{contact.name}</h3>
            <p class="text-[var(--color-primary-green)] font-medium mb-3">{contact.role}</p>
            <p class="text-gray-600 text-sm mb-4">{contact.description}</p>
            <div class="space-y-2">
              <a 
                href={`mailto:${contact.email}`}
                class="flex items-center text-gray-600 hover:text-[var(--color-primary-green)] transition-colors"
              >
                <svg class="w-5 h-5 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <span class="text-sm">{contact.email}</span>
              </a>
              {contact.phone && (
                <a 
                  href={`tel:${contact.phone}`}
                  class="flex items-center text-gray-600 hover:text-[var(--color-primary-green)] transition-colors"
                >
                  <svg class="w-5 h-5 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  <span class="text-sm">{contact.phone}</span>
                </a>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Locations -->
  <section class="py-12 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Our Locations</h2>
        <p class="text-gray-600">We have offices at two EPFL locations.</p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        {locations.map((location) => (
          <div class="bg-white rounded-2xl p-8 border border-gray-100 shadow-sm">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-[var(--color-primary-green)]/10 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-[var(--color-primary-green)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold text-gray-900 mb-1">{location.name}</h3>
                <p class="text-[var(--color-primary-green)] font-medium text-sm mb-2">{location.address}</p>
                <p class="text-gray-600 text-sm mb-4">{location.fullAddress}</p>
                <a 
                  href={location.mapUrl}
                  target="_blank"
                  rel="noopener"
                  class="inline-flex items-center text-sm text-[var(--color-primary-green)] font-medium hover:underline"
                >
                  View on map
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Mailing Address -->
  <section class="py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Mailing Address</h2>
        <div class="bg-gray-50 rounded-xl p-6 text-gray-600">
          <p class="font-medium text-gray-900">EPFL, INX-SV, SV UPSCHRIMPF1</p>
          <p>SV 2513 (Bâtiment SV)</p>
          <p>Station 19</p>
          <p>CH-1015 Lausanne</p>
          <p>Switzerland</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Social Links -->
  <section class="py-12 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Follow Us</h2>
        <div class="flex justify-center gap-4">
          <a 
            href="https://twitter.com/scikirc"
            target="_blank"
            rel="noopener"
            class="w-12 h-12 bg-white rounded-full flex items-center justify-center text-gray-600 hover:text-[var(--color-primary-green)] hover:shadow-md transition-all border border-gray-100"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
          <a 
            href="https://www.linkedin.com/company/epfl-neuroai-lab"
            target="_blank"
            rel="noopener"
            class="w-12 h-12 bg-white rounded-full flex items-center justify-center text-gray-600 hover:text-[var(--color-primary-green)] hover:shadow-md transition-all border border-gray-100"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a 
            href="https://scholar.google.com/citations?user=YOUR_ID"
            target="_blank"
            rel="noopener"
            class="w-12 h-12 bg-white rounded-full flex items-center justify-center text-gray-600 hover:text-[var(--color-primary-green)] hover:shadow-md transition-all border border-gray-100"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M5.242 13.769L0 9.5 12 0l12 9.5-5.242 4.269C17.548 11.249 14.978 9.5 12 9.5c-2.977 0-5.548 1.748-6.758 4.269zM12 10a7 7 0 1 0 0 14 7 7 0 0 0 0-14z"/>
            </svg>
          </a>
          <a 
            href="https://github.com/brain-score"
            target="_blank"
            rel="noopener"
            class="w-12 h-12 bg-white rounded-full flex items-center justify-center text-gray-600 hover:text-[var(--color-primary-green)] hover:shadow-md transition-all border border-gray-100"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
